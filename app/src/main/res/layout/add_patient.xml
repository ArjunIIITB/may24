<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPatientFolder.AddPatients">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >


                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Patient Registration"
                    android:textColor="#813D7E"
                    android:textSize="18dp"
                    android:textFontWeight="600"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="12dp"
                    android:layout_marginLeft="16dp"
                    android:text="Note: Enter Details according to Patient ID Proof. *indicates mandatory fields."
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView3" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="#565656"
                    android:textSize="16dp"
                    android:text="Identity Validation"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.011"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />

                <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID Proof"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView4" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="74dp"
                    android:layout_height="33dp"
                    android:layout_marginTop="28dp"
                    android:text="None"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.126"
                    app:layout_constraintStart_toEndOf="@+id/radioButton"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />

                <EditText
                    android:id="@+id/Identity_Proof"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="12dp"
                    android:ems="10"
                    android:paddingLeft="17dp"
                    android:inputType="textPersonName"
                    android:background="@drawable/border_style"
                    android:hint="Identity Proof"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/radioButton" />

                <EditText
                    android:id="@+id/Enter_ID_Number"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:paddingLeft="17dp"
                    android:inputType="textPersonName"
                    android:hint="Enter ID Number"
                    android:background="@drawable/border_style"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/Identity_Proof" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="#FBFBFB"
                    android:padding="10dp"
                    android:background="@drawable/button_rounded"
                    android:text="Get Details"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/Enter_ID_Number" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Basic Details"
                    android:layout_marginTop="8dp"
                    android:textColor="#565656"
                    android:textSize="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.01"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button6" />

                <EditText
                    android:id="@+id/Salutation"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:paddingLeft="17dp"
                    android:inputType="textPersonName"
                    android:hint="Salutation"
                    android:background="@drawable/border_style"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.018"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" />

                <LinearLayout
                    android:id="@+id/firstlastname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alignmentMode="alignMargins"
                    android:layout_marginTop="8dp"
                    android:columnCount="2"
                    android:rowCount="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/Salutation">

                    <EditText
                        android:id="@+id/First_Name"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="2"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="1"
                        android:ems="10"
                        android:paddingLeft="17dp"
                        android:hint="First Name"
                        android:background="@drawable/border_style"
                        android:inputType="textPersonName"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/Salutation" />

                    <EditText
                        android:id="@+id/Last_Name"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="2"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="1"
                        android:inputType="textPersonName"
                        android:hint="Last Name"
                        android:paddingLeft="17dp"
                        android:background="@drawable/border_style"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toEndOf="@+id/First_Name"
                        app:layout_constraintTop_toBottomOf="@+id/Salutation" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:alignmentMode="alignMargins"
                    android:columnCount="2"
                    android:rowCount="1"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/firstlastname">

                    <EditText
                        android:id="@+id/Date_of_Birth"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:paddingLeft="17dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="2"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="1"
                        android:ems="10"
                        android:background="@drawable/border_style"
                        android:inputType="textPersonName"
                        android:hint="Date of Birth"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/Salutation" />

                    <EditText
                        android:id="@+id/Gender"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:paddingLeft="17dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="2"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="1"
                        android:inputType="textPersonName"
                        android:hint="Gender"
                        android:background="@drawable/border_style"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toEndOf="@+id/First_Name"
                        app:layout_constraintTop_toBottomOf="@+id/Salutation" />
                </LinearLayout>

                <EditText
                    android:id="@+id/Salutation_father"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:layout_marginTop="8dp"
                    android:inputType="textPersonName"
                    android:hint="Salutation"
                    android:paddingLeft="17dp"
                    android:background="@drawable/border_style"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

                <EditText
                    android:id="@+id/Father_Name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:paddingLeft="17dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/border_style"
                    android:inputType="textPersonName"
                    android:hint="Father’s/Mother’s Name *"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/Salutation_father" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Permanent Address"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/Father_Name" />

                <EditText
                    android:id="@+id/Address_1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:paddingLeft="17dp"
                    android:layout_marginTop="8dp"
                    android:inputType="textPersonName"
                    android:hint="Address 1 *"
                    android:background="@drawable/border_style"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.246"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView6" />

                <EditText
                    android:id="@+id/Address_2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:paddingLeft="17dp"
                    android:layout_marginTop="8dp"
                    android:inputType="textPersonName"
                    android:hint="Address 2 *"
                    android:background="@drawable/border_style"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/Address_1" />

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alignmentMode="alignMargins"
                    android:columnCount="2"
                    android:layout_marginTop="8dp"
                    android:rowCount="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/Address_2">

                    <EditText
                        android:id="@+id/City"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="2"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/border_style"
                        android:layout_weight="1"
                        android:paddingLeft="17dp"
                        android:ems="10"
                        android:layout_marginRight="8dp"
                        android:inputType="textPersonName"
                        android:hint="City *"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/Salutation" />

                    <EditText
                        android:id="@+id/District"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:paddingLeft="17dp"
                        android:layout_marginLeft="8dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="2"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="1"
                        android:inputType="textPersonName"
                        android:background="@drawable/border_style"
                        android:hint="District *"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toEndOf="@+id/First_Name"
                        app:layout_constraintTop_toBottomOf="@+id/Salutation" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alignmentMode="alignMargins"
                    android:columnCount="2"
                    android:layout_marginTop="8dp"
                    android:rowCount="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

                    <EditText
                        android:id="@+id/State"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="2"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="1"
                        android:layout_marginRight="8dp"
                        android:ems="10"
                        android:paddingLeft="17dp"
                        android:background="@drawable/border_style"
                        android:inputType="textPersonName"
                        android:hint="State *"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/Salutation" />

                    <EditText
                        android:id="@+id/Pincode"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="2"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="1"
                        android:layout_marginLeft="8dp"
                        android:inputType="textPersonName"
                        android:hint="Pincode *"
                        android:paddingLeft="17dp"
                        android:background="@drawable/border_style"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toEndOf="@+id/First_Name"
                        app:layout_constraintTop_toBottomOf="@+id/Salutation" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Contact Details and Patient Consent to Keep Medical Records"
                    android:textColor="#565656"
                    android:layout_marginTop="8dp"
                    android:textSize="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

                <EditText
                    android:id="@+id/Email"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:paddingLeft="17dp"
                    android:background="@drawable/border_style"
                    android:inputType="textPersonName"
                    android:layout_marginTop="8dp"
                    android:hint="Email"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView7" />

                <LinearLayout
                    android:id="@+id/linearLayout7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alignmentMode="alignMargins"
                    android:columnCount="2"
                    android:layout_marginTop="8dp"
                    android:rowCount="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/Email">

                <EditText
                    android:id="@+id/Mobile_number"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="2"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:layout_marginRight="8dp"
                    android:ems="10"
                    android:paddingLeft="17dp"
                    android:background="@drawable/border_style"
                    android:inputType="textPersonName"
                    android:hint="Mobile Number"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent" />

                    <Button
                        android:id="@+id/reliability"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="2"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_rounded"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:onClick="sendOTP"
                        android:padding="10dp"
                        android:text="Send OTP"
                        android:textColor="#FBFBFB"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/Salutation" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alignmentMode="alignMargins"
                    android:columnCount="2"
                    android:layout_marginTop="8dp"
                    android:rowCount="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout7">



                    <EditText
                        android:id="@+id/editText19"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="2"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="1"
                        android:layout_marginRight="8dp"
                        android:ems="10"
                        android:paddingLeft="17dp"
                        android:background="@drawable/border_style"
                        android:inputType="textPersonName"
                        android:hint="OTP"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toEndOf="@+id/First_Name"
                        app:layout_constraintTop_toBottomOf="@+id/Salutation" />
                    <Button
                        android:id="@+id/button5"
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:onClick="verifyOTP"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="2"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="1"
                        android:layout_marginLeft="8dp"
                        android:inputType="textPersonName"
                        android:text="Verify OTP"
                        android:textColor="#FBFBFB"
                        android:padding="10dp"
                        android:background="@drawable/button_rounded"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"

                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearLayout6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alignmentMode="alignMargins"
                    android:columnCount="2"
                    android:layout_marginTop="8dp"
                    android:rowCount="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:onClick="createPatient"
                        android:layout_rowWeight="1"
                        android:layout_marginRight="8dp"
                        android:layout_columnWeight="2"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="1"
                        android:ems="10"
                        android:textColor="#FBFBFB"
                        android:padding="10dp"
                        android:background="@drawable/button_rounded"
                        android:inputType="textPersonName"
                        android:text="Submit"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/Salutation" />


                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>